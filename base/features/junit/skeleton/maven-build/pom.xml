<project>
	<build>
		<plugins>
			<!-- JUnit 5 requires Surefire version 2.22.0 or higher -->
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.22.0</version>
				<configuration>
					<detail>true</detail>
					<includes>
						<include>%regex[.*]</include>
					</includes>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>